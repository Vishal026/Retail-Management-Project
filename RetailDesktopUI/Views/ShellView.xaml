<Window x:Class="RetailDesktopUI.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RetailDesktopUI.Views"
        mc:Ignorable="d" FontSize="20"
        Title="ShellView" Height="450" Width="800" Background="WhiteSmoke">
    <DockPanel>
        <Menu DockPanel.Dock="top">
            <MenuItem Header="_File" FontSize="20">
                
            </MenuItem>
            <MenuItem Header="_Account" FontSize="20">
                <MenuItem x:Name="_LoginScreen" Header="_Login" />
            </MenuItem>
        </Menu>
        <Grid>
            <ContentControl x:Name="ActiveItem" Margin="5"/>
        </Grid>
    </DockPanel>
     
</Window>
